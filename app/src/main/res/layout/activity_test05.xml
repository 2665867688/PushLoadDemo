<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yue.pushload.activity02.Test05Activity">

    <Button
        android:id="@+id/btn_test05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="layout"/>

    <RelativeLayout
        android:id="@+id/layout_test05"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈哈哈哈"/>
        </LinearLayout>
    </RelativeLayout>

    <com.yue.pushload.footer.TestFooter
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/img_test05_jiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_back"/>

    <Button
        android:id="@+id/btn_test05_imgrotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片旋转"/>

    <Button
        android:id="@+id/btn_test05_setscroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setScroll**"/>

</LinearLayout>
